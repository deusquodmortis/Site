@using TestSite.Models;
@model IEnumerable<ProductModel>
@{
    ViewBag.Title = "List";
}
<div class="row">
    <div class="col-md-3 pl-4 pr-4">
        @Html.Action("GetCategories", "Home")
    </div>
    <div class="col-md-9">
        <div class="container">
            @if (Model.Count() == 0)
            {
                <div class="alert alert-warning" role="alert" style="text-align:center; font-size:20px">
                    Bu kategoride ürün yok. <i class="far fa-frown"></i>
                </div>
            }
            else
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert" style="text-align:center; font-size:20px">
                    @Model.Count() adet ürün bulundu. <i class="far fa-smile"></i>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

            }
            @Html.Partial("_ProductList", Model)
        </div>
    </div>
</div>

