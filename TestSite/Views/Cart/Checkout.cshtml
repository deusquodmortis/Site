@model TestSite.Models.ShippingDetails
@{
    ViewBag.Title = "Checkout";
}
<style></style>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Bilgileri</h2>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Username</label>
                            <span class="badge-danger">@User.Identity.Name</span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Address Basligi</label>
                            @Html.TextBoxFor(x => x.AdresBasligi, new { @class = "form-control", placeholder = "Ev,Okul" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress">Address</label>
                        @Html.TextBoxFor(x => x.Adres, new { @class = "form-control", placeholder = "1234 Main St" })
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputCity">City</label>
                            @Html.TextBoxFor(x => x.Il, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputCity">Ilce</label>
                            @Html.TextBoxFor(x => x.Ilce, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-2">
                            <label for="inputZip">PostaKodu</label>
                            @Html.TextBoxFor(x => x.PostaKodu, new { @class = "form-control" })
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Sign in</button>
                </form>
            }

        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
