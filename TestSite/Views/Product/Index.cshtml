@model IEnumerable<TestSite.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <div class="container text-center">
        <h2>Ürün List</h2>
        <hr />
        <p>
            @Html.ActionLink("Ürün +", "Create",null,new {@class="btn btn-outline-primary btn-sm" })
        </p>
        <table class="table table-bordered table-striped">
            <tr>
                <th >
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th >
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Stock)
                </th>
                <th style="width:100px">
                    @Html.DisplayNameFor(model => model.IsHome)
                </th>
                <th style="width:130px">
                    @Html.DisplayNameFor(model => model.IsApproved)
                </th>
                <th style="width:210px"></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td >
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td >
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td >
                        @Html.DisplayFor(modelItem => item.Stock)
                    </td>
                    <td >
                        @if (item.IsHome)
                        {
                                <i class="fas fa-check" style="font-size:20px"></i>
                        }
                        else
                        {
                                <i class="fas fa-times" style="font-size:24px"></i>
                        }
                        
                    </td>
                    <td >
                        @if (item.IsApproved)
                        {
                            <i class="fas fa-check" style="font-size:20px"></i>
                        }
                        else
                        {
                            <i class="fas fa-times" style="font-size:24px"></i>
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id },new {@class="btn btn-outline-warning btn-sm" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id },new {@class="btn btn-outline-dark btn-sm" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id },new {@class="btn btn-outline-danger btn-sm" })
                    </td>
                </tr>
            }

        </table>
    </div>